[%CFEngine BEGIN %]
auto lo
iface lo inet loopback

[%CFEngine END %]
[%CFEngine do_dhcp:: %]
[%CFEngine BEGIN %]
auto $(config.base_net_dev)
iface $(config.base_net_dev) inet dhcp
[%CFEngine END %]
[%CFEngine !do_dhcp:: %]
[%CFEngine BEGIN %]
auto $(config.base_net_dev)
iface $(config.base_net_dev) inet static
	address	$(config.base_net_addr)
	netmask $(config.base_net_mask)
[%CFEngine END %]
[%CFEngine !do_dhcp.am_gateway:: %]
	pre-up /sbin/iptables-restore /etc/network/firewall
[%CFEngine !do_dhcp.!am_gateway:: %]
	gateway $(config.base_net_gateway)
