bundle agent init
{

methods:
                "any" usebundle => init_cleanup();
                "any" usebundle => init_config();
}

bundle agent init_cleanup
{
files:
		"$(sys.workdir)/outputs"
			delete => tidy,
			file_select => days_old("3"),
			depth_search => recurse("inf");
}

bundle agent init_config
{
commands:
                "$(sys.workdir)/inputs/modules/config"
                        module => "true";
}

